extends layout

block content

  h1.ChannelTitle
    = title

  .Grid
    each block in helpers.shuffle(contents)
      .GridBlock(
        style='width: ' + helpers.rand(100, 400) + 'px;' + 'height: ' + helpers.fibonacci() + 'px;'
      )
        if block.title
          h2= block.title

        if block.description
          p= block.description

        if block.image
          a(
            href='/blocks/' + block.id
          )
            img(src=block.image.display.url)
